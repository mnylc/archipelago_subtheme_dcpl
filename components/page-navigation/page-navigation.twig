{#
/**
 * @file
 * Template for a Page Navigation component.
 *
#}
{% apply spaceless %}

{%
  embed 'archipelago_subtheme_dcpl:navbar' with {
    container: 'fixed',
    placement: 'sticky-top',
    navbar_theme: 'light',
    navbar_expand: false,
    navbar_utility_classes: [
      'justify-content-between',
      'bg-white',
      'text-dark',
      'col-full'
    ],
  }
%}
  {% block branding %}
    {% if page.navbar_branding %}
      {{ page.navbar_branding }}
    {% endif %}
  {% endblock %}

  {% block left %}
    {% if page.navbar_left %}
      <div class="me-auto">
        {{ page.navbar_left }}
      </div>
    {% endif %}
  {% endblock %}

  {% block right %}
    {% if page.navbar_right %}
      <div class="ms-auto">
        {{ page.navbar_right }}
      </div>
    {% endif %}
  {% endblock %}
  {% block bottom %}
    {% if page.navbar_bottom %}
      <div class="ms-auto">
        {{ page.navbar_bottom }}
      </div>
    {% endif %}
  {% endblock %}
{% endembed %}

{% endapply %}
